@page "{id}" 
    @*Lavet Af Cecilie & Jonathan*@
@model Corona_App.Pages.Kunder.BrugerModel
@{
    ViewData["Title"] = "Profil";
}
<div class="container">
    <h1>Profil</h1>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <input type="hidden" asp-for="b.Id" />

                @* felt til navn, viser den pågældendes brugers information *@
                <div class="form-group">
                    <label> Navn: </label>
                    <input type="text" asp-for="b.Navn" class="form-control" minlength="2" />
                    <span asp-validation-for="b.Navn" class="alert-danger"></span>
                </div>


                <div class="form-group">
                    <label>Adresse:</label>
                    <input type="text" asp-for="b.Adresse" class="form-control" />
                    <span asp-validation-for="b.Adresse" class="alert-danger"></span>
                </div>

                <div class="form-group">
                    <label>Tlf nummer</label>
                    <input type="text" asp-for="b.Mobilnummer" class="form-control" minlength="8"/>
                    <span asp-validation-for="b.Mobilnummer" class="alert-danger"></span>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="email" asp-for="b.Email" class="form-control" minlength="6" pattern="\[a-z0-9._%+-]+@@[a-z0-9.-]{1,}+\.[a-z]{2,}$"/>
                    <span asp-validation-for="b.Email" class="alert-danger"></span>
                </div>

                <div class="form-group">
                    <label>Adgangskode</label>
                    <input type="password" asp-for="b.Adgangskode" placeholder="Adgangskode" class="form-control" minlength="8" />
                    <span asp-validation-for="b.Adgangskode" class="alert-danger"></span>
                </div>

                <div class="form-group knap">
                    <input type="submit" value="Gem ændringer" class="btn btn-primary knap" />
                    <span asp-validation-summary="All" class="text-danger"></span>
                </div>

                <div class="form-group knap2">
                    <input type="submit" value="Slet bruger" formaction="/Kunder/Bruger/SletBruger" class="btn btn-danger knap2" />
                </div>

            </form>
        </div>
    </div>
</div>

