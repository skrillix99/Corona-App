@page "{id}"
@model Corona_App.Pages.Varer.RedigereVareModel
@{
}

<div class="container">
    <h1>Du kan ændre på varen her</h1>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <input type="hidden" asp-for="@Model.Varer.VareNr" />
                <div asp-validation-summary="All" class="alert-danger"></div>

                <div class="form-group">
                    <label>Pris</label>
                    <input type="number" asp-for="@Model.Varer.Pris" class="form-control" />
                    <span asp-validation-for="@Model.Varer.Pris" class="alert-danger"></span>
                </div>

                <div class="form-group">
                    <label>Navn</label>
                    <input type="text" asp-for="@Model.Varer.Navn" class="form-control" />
                    <span asp-validation-for="@Model.Varer.Navn" class="alert-danger"></span>
                </div>

                <div class="form-group">
                    <label>Katagori</label>
                    <select name="Varer.Kategori" asp-for="Varer.Kategori" class="form-control">
                        @foreach (var kategori in Enum.GetValues(typeof(Katagoris)))
                        {
                            <option value="@kategori">@kategori</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Opdater" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>
</div>
