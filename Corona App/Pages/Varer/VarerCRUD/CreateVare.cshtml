@model Corona_App.Pages.Varer.CreateVareModel
@{
}

<div class="container">
    <h1>welp</h1>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="All" class="alert-danger"></div>
                <p>@Model.ErrorMsg</p>

                <div class="form-group">
                    <label asp-for="Varer.Pris"></label>
                    <input type="number" asp-for="Varer.Pris" class="form-control" />
                    <span asp-validation-for="Varer.Pris" class="alert-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Varer.Navn"></label>
                    <input type="text" asp-for="Varer.Navn" class="form-control" />
                    <span asp-validation-for="Varer.Navn" class="alert-danger"></span>
                </div>

                <div class="form-group">
                    <label>Katagori</label>
                    <select name="Varer.Kategori" asp-for="Varer.Kategori" class="form-control">
                        @foreach (var katagori in Enum.GetValues(typeof(Katagoris)))
                        {
                            <option value="@katagori">@katagori</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Opret" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>
</div>